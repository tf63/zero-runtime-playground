{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "ES5",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "preserve",
        "plugins": [{ "name": "next" }],

        "allowJs": true,
        "declaration": false,
        "declarationMap": false,
        "incremental": true,
        "resolveJsonModule": true
    },
    "include": ["src", "next-env.d.ts"]
}
