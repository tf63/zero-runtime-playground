{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "formatter": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "a11y": { "recommended": true },
            "complexity": { "recommended": true, "noBannedTypes": "off", "useArrowFunction": "error" },
            "correctness": {
                "recommended": true,
                "noUnusedImports": "error",
                "noUnusedVariables": "error",
                "useHookAtTopLevel": "error",
                "noEmptyPattern": "off"
            },
            "performance": { "recommended": true },
            "security": { "recommended": true },
            "style": {
                "recommended": true,
                "noDefaultExport": "off",
                "noImplicitBoolean": "error",
                "noNonNullAssertion": "warn"
            },
            "suspicious": {
                "recommended": true,
                "noConsoleLog": "error",
                "noDebugger": "error",
                "useAwait": "error"
            },
            "nursery": { "useSortedClasses": "off" }
        },

        "ignore": [
            "**/tsconfig.*",
            "**/vite.config.*",
            "**/next.config.*",
            "**/tailwind.config.*",
            "**/postcss.config.*",
            "**/plopfile.*",
            "**/jest.config.*",
            "**/package-lock.json",
            "**/yarn.lock",
            "**/pnpm-lock.yaml",
            "**/.DS_Store",
            "**/node_modules/**/*",
            "**/public/**/*",
            "**/dist/**/*",
            "**/dist-ssr/**/*",
            "**/build/**/*",
            "**/coverage/**/*",
            "**/bin/**/*",
            "**/obj/**/*",
            "**/out/**/*",
            "**/.yarn/**/*",
            "**/.next/**/*",
            "**/.vercel/**/*",
            "**/*.mdx"
        ]
    },
    "json": {
        "parser": {
            "allowComments": true
        }
    },
    "overrides": [
        {
            "include": ["features/", "components/", "lib/"],
            "linter": {
                "rules": {
                    "style": { "noDefaultExport": "error" }
                }
            }
        },
        {
            "include": ["*.stories.*", "*.story.*"],
            "linter": {
                "rules": {
                    "style": { "noDefaultExport": "off" },
                    "correctness": { "useHookAtTopLevel": "off" }
                }
            }
        }
    ]
}
