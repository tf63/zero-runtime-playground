{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**"]
        },
        "lint": {},
        "lint:fix": {},
        "test": {
            "outputs": ["test/unit/coverage"]
        },
        "test:watch": {
            "persistent": true,
            "outputs": ["test/unit/coverage"]
        },
        "test:ui": {
            "persistent": true,
            "outputs": ["test/unit/coverage"]
        },
        "test:e2e": {
            "outputs": ["test-results", "playwright-report"]
        },
        "test:e2e:ui": {
            "dependsOn": ["test:e2e"],
            "persistent": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
